@model Eticaret.Models.CreditCart

@{
    ViewData["Title"] = "KrediKartiEkle";
}

<h1>KrediKartiEkle</h1>

<h4>CreditCart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="KrediKartiEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdSoyad" class="control-label"></label>
                <input asp-for="AdSoyad" class="form-control" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KartNumarasi" class="control-label"></label>
                <input asp-for="KartNumarasi" class="form-control" />
