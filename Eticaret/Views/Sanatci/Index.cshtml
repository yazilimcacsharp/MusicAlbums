@model IEnumerable<Eticaret.Models.Artist>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<div class="col-md-12">

<h1>Sanatçılar</h1>

<p>
    <a asp-action="Create">Sanatçı Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FotoPath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
@*          @Html.DisplayFor(modelItem => item.FotoPath) *@
                <img src="@item.FotoPath" style="width:100px;height:100px;"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArtistId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ArtistId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ArtistId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>

